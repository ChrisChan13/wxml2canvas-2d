/* pages/sales/sales.wxss */
.dashboard {
  padding: 20rpx 30rpx 120rpx;
  background-color: #f8f9fe;
}

/* 顶部标题 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
}

.month-picker {
  display: flex;
  align-items: center;
  padding: 10rpx 24rpx;
  background-color: #fff;
  border-radius: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  font-size: 28rpx;
  color: #666;
}

.arrow-icon {
  width: 24rpx;
  height: 24rpx;
  margin-left: 10rpx;
}

/* 数据概览卡片 */
.overview-card {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.1);
}

.overview-item {
  width: 48%;
  margin-bottom: 20rpx;
}

.overview-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #667eea;
  margin-bottom: 10rpx;
}

.overview-label {
  font-size: 24rpx;
  color: #999;
}

/* 图表容器 */
.chart-container {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.1);
}

.chart-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.chart {
  width: 100%;
  height: 400rpx;
}

/* 时段分析 */
.time-analysis {
  background-color: #fff;
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 24rpx rgba(102, 126, 234, 0.1);
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.time-slots {
  margin-top: 20rpx;
}

.time-slot {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.time {
  width: 100rpx;
  font-size: 24rpx;
  color: #666;
}

.progress-bar {
  flex: 1;
  height: 20rpx;
  background-color: #f0f0f0;
  border-radius: 10rpx;
  margin: 0 20rpx;
  overflow: hidden;
}

.progress {
  height: 100%;
  border-radius: 10rpx;
}

.percent {
  width: 80rpx;
  font-size: 24rpx;
  color: #666;
  text-align: right;
}

/* 底部购物车样式 */
.footer-share {
  position: fixed;
  right: 40rpx;
  bottom: 80rpx;
  width: 100rpx;
  height: 100rpx;
  background-color: #ff4f94;
  color: #fff;
  font-size: 30rpx;
  font-weight: 700;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4rpx 20rpx rgba(255, 79, 148, 0.5);
}
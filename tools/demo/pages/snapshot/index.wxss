/* pages/index/index.wxss */
.products {
  padding-bottom: 100rpx;
  background-color: #f8f8f8;
}

/* 搜索栏样式 */
.search-bar {
  position: relative;
  padding: 20rpx 30rpx;
  background-color: #ff4f94;
}

.search-input {
  height: 70rpx;
  line-height: 70rpx;
  background-color: #fff;
  border-radius: 35rpx;
  padding-left: 80rpx;
  padding-right: 30rpx;
  font-size: 28rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
}

.placeholder-style {
  color: #ccc;
}

.search-icon {
  position: absolute;
  left: 50rpx;
  top: 35rpx;
  width: 36rpx;
  height: 36rpx;
}

/* 轮播图样式 */
.banner {
  height: 360rpx;
  margin: 20rpx 30rpx;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 24rpx rgba(255, 79, 148, 0.2);
}

.banner-image {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
}

/* 分类标签样式 */
.category-scroll {
  box-sizing: border-box;
  white-space: nowrap;
  padding: 20rpx 0;
  background-color: #fff;
  margin: 20rpx 0;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.category-item {
  display: inline-block;
  padding: 12rpx 30rpx;
  margin-right: 20rpx;
  font-size: 28rpx;
  color: #666;
  border-radius: 30rpx;
  background-color: #f5f5f5;
  transition: all 0.3s;
}
.category-item:first-of-type {
  margin-left: 30rpx;
}
.category-item:last-of-type {
  margin-right: 30rpx;
}

.category-item.active {
  background-color: #ff4f94;
  color: #fff;
  font-weight: bold;
}

/* 商品列表样式 */
.product-list {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 0 20rpx;
}

.product-item {
  width: 345rpx;
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
  transition: transform 0.3s;
}

.product-item:active {
  transform: scale(0.98);
}

.product-image {
  width: 100%;
  height: 345rpx;
  border-radius: 16rpx 16rpx 0 0;
}

.product-info {
  padding: 20rpx;
}

.product-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.product-desc {
  font-size: 24rpx;
  color: #999;
  margin-bottom: 15rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

.product-price {
  margin-bottom: 15rpx;
}

.current-price {
  font-size: 36rpx;
  color: #ff4f94;
  font-weight: bold;
}

.original-price {
  font-size: 24rpx;
  color: #999;
  text-decoration: line-through;
  margin-left: 10rpx;
}

.product-actions {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.cart-icon {
  width: 50rpx;
  height: 50rpx;
}

.sold-count {
  font-size: 24rpx;
  color: #999;
}

/* 底部购物车样式 */
.footer-share {
  position: fixed;
  right: 40rpx;
  bottom: 80rpx;
  width: 100rpx;
  height: 100rpx;
  background-color: #ff4f94;
  color: #fff;
  font-size: 30rpx;
  font-weight: 700;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4rpx 20rpx rgba(255, 79, 148, 0.5);
}